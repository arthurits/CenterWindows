<Page
    x:Name="PageRoot"
    x:Class="CenterWindow.Views.SelectWindowPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:media="using:Microsoft.UI.Xaml.Media"
    xmlns:viewmodel="using:CenterWindow.ViewModels"
    xmlns:converter="using:CenterWindow.Converters"
    d:DataContext="{d:DesignInstance Type=viewmodel:SelectWindowViewModel, IsDesignTimeCreatable=True}"
    mc:Ignorable="d"
    NavigationCacheMode="Enabled"
    SizeChanged="Page_SizeChanged">
    
    <Page.Resources>
        <!-- Converters -->
        <converter:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
        <converter:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter"/>
        <converter:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>

        <!-- ListView DataTemplate -->
        <DataTemplate x:Key="PropertyTemplate">
            <Grid RowDefinitions="Auto, Auto">
                <Grid ColumnDefinitions="Auto, Auto, *" ColumnSpacing="12" Padding="6">
                    <Image
                        Source="{Binding IconPath}"
                        Width="20"
                        Height="20"
                        VerticalAlignment="Center"
                        Visibility="{Binding IconPath, Converter={StaticResource NullToVisibilityConverter}}"/>
                    <TextBlock
                        Text="{Binding Key}"
                        IsTextSelectionEnabled = "True"
                        Style="{StaticResource DataLabelTextStyle}"
                        Grid.Column="1"/>
                    <TextBlock
                        Text="{Binding Value}"
                        IsTextSelectionEnabled="True"
                        Style="{StaticResource DataValueTextStyle}"
                        Grid.Column="2"
                        TextTrimming="CharacterEllipsis"/>
                </Grid>
                <Rectangle
                        Grid.Row="1"
                        Grid.ColumnSpan="3"
                        Height="1"
                        Fill="{ThemeResource ListViewItemSeparatorBrush}"
                        Visibility="{Binding IsLastItem, Converter={StaticResource InverseBoolToVisibilityConverter}}"
                    Margin="0,6,0,6"/>
            </Grid>
        </DataTemplate>

        <!-- AcrylicBrush -->
        <media:AcrylicBrush x:Key="PanelAcrylicBrush"
                  AlwaysUseFallback="True"
                  TintColor="#FFF7E7CE"
                  TintOpacity="0.3"
                  FallbackColor="#FFFAF3E0"/>
    </Page.Resources>
    
    <Grid x:Name="ContentArea" ColumnDefinitions="*" RowDefinitions ="*">

        <ScrollView x:Name="ScrollViewPage" ContentOrientation="Vertical"
            HorizontalContentAlignment="Stretch"  VerticalContentAlignment="Stretch"
            ZoomMode="Disabled" IsTabStop="True"
            VerticalAlignment="Top" HorizontalAlignment="Left"
            HorizontalScrollMode="Auto" HorizontalScrollBarVisibility="Auto"
            VerticalScrollMode="Auto" VerticalScrollBarVisibility="Auto">

            <StackPanel Orientation="Vertical" Style="{StaticResource BaseStackPanel}">

                <Grid ColumnDefinitions="*" RowDefinitions ="*, *, *, Auto" RowSpacing="16">

                    <StackPanel x:Name="PanelSelect"
                                Grid.Row="0"
                                Orientation="Vertical"
                                Style="{StaticResource ContentStackPanel}"
                                Spacing="16"> <!-- We use the recommended 16 px space -->
                        <TextBlock
                            Text="{x:Bind ViewModel.StrDragCrossHair, Mode=OneWay}"
                            TextAlignment="Center"
                            Style="{ThemeResource SubtitleTextBlockStyle}"/>
                        <!-- Transparent button to capture the click event -->
                        <Button
                            x:Name="SelectWindow"
                            Background="Transparent"
                            BorderThickness="0"
                            Padding="0"
                            HorizontalAlignment="Center"
                            Margin="0, 0, 0, 16">   <!-- We use the recommended 16 px space -->
                            <!-- Change image according to CurrentImage -->
                            <Image
                                Source="{Binding CurrentImage}"
                                Width="48"
                                Height="44"
                                Stretch="Uniform"/>
                        </Button>
                    </StackPanel>

                    <!-- Transparency selection -->
                    <StackPanel
                        x:Name="PanelTransparency"
                        Grid.Row="1"
                        Style="{StaticResource ContentStackPanel}"
                        Spacing="16">
                        <TextBlock
                            Text="{x:Bind ViewModel.StrTransparencyText, Mode=OneWay}"
                            HorizontalAlignment="Center"
                            Style="{ThemeResource SubtitleTextBlockStyle}" />
                        <Grid
                            x:Name="TransparencySlider"
                            ColumnDefinitions = "Auto, 200, Auto"
                            HorizontalAlignment="Center"
                            Margin="0, 6, 0, 6">
                            <TextBlock
                                Text="0"
                                VerticalAlignment="Center"
                                Grid.Column="0"
                                Margin="0,0,8,0"/>
                            <Slider
                                Grid.Column="1"
                                Minimum="0"
                                Maximum="255"
                                Value="{Binding Transparency, Mode=TwoWay}"
                                Width="200"/>
                            <TextBlock
                                Text="255"
                                VerticalAlignment="Center"
                                Grid.Column="2"
                                Margin="8,0,0,0"/>
                        </Grid>
                    </StackPanel>

                    <!-- Selected window data -->
                    <StackPanel x:Name="PanelData"
                        Grid.Row="2"
                        Orientation="Vertical"
                        Style="{StaticResource ContentStackPanel}"
                        Spacing="16">
                        <TextBlock
                            Text="{x:Bind ViewModel.StrWindowProperties, Mode=OneWay}"
                            HorizontalAlignment="Center"
                            Style="{ThemeResource SubtitleTextBlockStyle}"/>
                        <ListView ItemsSource="{Binding WindowPropertiesCollection}"
                            ItemTemplate="{StaticResource PropertyTemplate}"
                            SelectionMode="None"
                            IsItemClickEnabled="False"
                            BorderThickness="0">
                            <!--<ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    -->
                            <!-- Márgenes para espaciado vertical 
           6px arriba y 6px abajo centran la línea entre ítems -->
                            <!--
                                    <Setter Property="Margin" Value="0,6,0,6"/>
                                    <Setter Property="Padding" Value="4"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="BorderBrush" Value="Transparent"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ListViewItem">
                                                <Grid>
                                                    <ContentPresenter/>
                                                    -->
                            <!-- Línea como borde inferior -->
                            <!--
                                                    <Border
                                                        Background="Transparent"
                                                        BorderBrush="{ThemeResource ListViewItemSeparatorBrush}"
                                                        BorderThickness="0,0,0,1"
                                                        VerticalAlignment="Bottom"
                                                        IsHitTestVisible="False"
                                                        Visibility="{Binding Content.IsLastItem,
                                                            RelativeSource={RelativeSource Mode=TemplatedParent},
                                                            Converter={StaticResource InverseBoolToVisibilityConverter}}"/>
                                                </Grid>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ListView.ItemContainerStyle>-->
                        </ListView>
                    </StackPanel>

                </Grid>
            </StackPanel>
        </ScrollView>
        
        <!-- Restore cursor -->
        <Canvas
            x:Name="CanvasOverlay"
            Grid.Row="0"  
            Grid.RowSpan="2">
            <StackPanel
                x:Name="RestoreCursorPanel"
                Background="{StaticResource PanelAcrylicBrush}"
                Style="{StaticResource ContentStackPanel}"
                Width="300"
                Canvas.ZIndex="100"  
                Canvas.Left="{x:Bind ViewModel.PanelLeft, Mode=TwoWay}"  
                Canvas.Top="{x:Bind ViewModel.PanelTop, Mode=TwoWay}"  
                ManipulationMode="TranslateX,TranslateY"  
                ManipulationDelta="RestoreCursor_ManipulationDelta"
                Visibility="{x:Bind ViewModel.IsRestoreCursorVisible, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                <TextBlock
                    Text="{x:Bind ViewModel.StrRestoreCursorTextBlock, Mode=OneWay}"
                    TextAlignment="Center"
                    Style="{ThemeResource BodyTextBlockStyle}"
                    Margin="0, 16, 0, 0"/>
                <Button
                    Content="{x:Bind ViewModel.StrRestoreCursorButton, Mode=OneWay}"
                    Command="{x:Bind ViewModel.RestoreCursorCommand}"
                    HorizontalAlignment="Center"
                    Margin="0, 0, 0, 16"/>
            </StackPanel>
        </Canvas>
    </Grid>
</Page>
